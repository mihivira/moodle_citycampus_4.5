{{!
    @template local_miplugin/dashboard_reportes
    Template para mostrar reportes en dashboard con cards y gráficas.

    Context variables required for this template:
    * numero_hoteles - Número de unidades operativas
    * cantidad_usuarios - Cantidad total de usuarios
    * aprobados - Cantidad de usuarios aprobados
    * porcentaje_aprobados - Porcentaje de aprobados
    * no_aprobados - Cantidad de usuarios no aprobados
    * porcentaje_no_aprobados - Porcentaje de no aprobados
}}

<div class="dashboard-reportes">

    <div class="container-fluid">
        <h3 class="text-center mb-4">Reportes</h3>

        <!-- Cards informativas -->
        <div class="row">

            <!-- Card Unidades Operativas -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Unidades Operativas</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800" id="card_numero_hoteles">{{numero_hoteles}}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-building fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card Cantidad de usuarios -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-secondary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">Cantidad de usuarios</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800" id="card_cantidad_usarios">{{cantidad_usuarios}}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card Aprobados -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Aprobados</div>
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800" id="card_aprobados">{{aprobados}}</div>
                                    </div>
                                    <div class="col">
                                        <div class="progress progress-sm mr-2">
                                            <div class="progress-bar bg-success" role="progressbar"
                                                style="width: {{porcentaje_aprobados}}%"
                                                aria-valuenow="{{porcentaje_aprobados}}" aria-valuemin="0" aria-valuemax="100" id="progress_aprobados"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card No aprobados -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">No aprobados</div>
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="card_no_aprobados">{{no_aprobados}}</div>
                                    </div>
                                    <div class="col">
                                        <div class="progress progress-sm mr-2">
                                            <div class="progress-bar bg-danger" role="progressbar"
                                                style="width: {{porcentaje_no_aprobados}}%"
                                                aria-valuenow="{{porcentaje_no_aprobados}}" aria-valuemin="0" aria-valuemax="100" id="progress_noaprobados"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-times fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div> <!-- Fin row cards -->

        <!-- Botón para gráficas -->
        <div class="text-right mb-4">
            <button class="btn btn-primary" onclick="top.window.location.href='estatus_curso.php'">
                Gráficas de curso
            </button>
        </div>

        <!-- Contenedor de gráficas -->
        <div id="contenedor_graficas" class="row mb-4"></div>

        <!-- Overlay de carga -->
        <div id="overlay" >
            <div id="loading-message" class="text-white">Cargando...</div>
        </div>
    </div> <!-- Fin container -->

</div> <!-- Fin dashboard-reportes -->

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-secondary {
        border-left: 0.25rem solid #858796 !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .border-left-danger {
        border-left: 0.25rem solid #e74a3b !important;
    }

    .text-xs {
        font-size: .7rem;
    }

    #overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }
</style>
    
