<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>{{title}}</h3>
        {{#cancreateuser}}
            <a href="{{createuserurl}}" target="_blank" rel="noopener" class="btn btn-primary btn-sm">
                Crear nuevo usuario
            </a>
        {{/cancreateuser}}
    </div>

    <div class="card-body">
        <table id="empTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    
                    {{#columns}}
                        {{{.}}}
                    {{/columns}}
                </tr>
            </thead>
            <tfoot>
                <tr>
                    
                    {{#columns}}
                        {{{.}}}
                    {{/columns}}
                </tr>
            </tfoot>
        </table>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="confirmModalBody">
            </div>
            <div class="modal-footer">
                <a href="#" id="confirmModalAction" class="btn btn-danger">Aceptar</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>